<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardNotes"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardBackgroundColor="@color/whitetrans"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_judul"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/tv_id"
            android:fontFamily="@font/futuraheavy"
            android:padding="10dp"
            android:text="INI JUDUL"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_deskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futurabook"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="Ini deskripsi ya kawan kawanku sekalian"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_below="@id/tv_judul"
            android:maxLines="5"/>

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futuraheavy"
            android:padding="10dp"
            android:text="ID"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            />


    </RelativeLayout>


</androidx.cardview.widget.CardView>